    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\bin\\sing_d.exe",
            //"args": ["-p", "-o", "../inc/net.h", "-u", "net.sing", "-I", "."],
            //"args": ["-g", "-I", "../../sing_bench", "-I", "../../sing_headers", "-o", "../../out_bench/net_test.h", "../../sing_bench/net_test.sing"],
            //"args": ["-u", "-I", "../../tests", "-MF", "-o", "../../tests_results/synth_test.h", "../../tests/synth_test.sing"],
            //"args": ["-^", "3", "-I", "../tests", "-I", "../", "-u", "checker_pkgs_test.sing"],
            "args": ["-s", "-I", "sing_headers", "-I", "sing_bench"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\..\\singlib",
            //"cwd": "${workspaceFolder}\\..\\singlib\\build\\obj_d",
            //"cwd": "${workspaceFolder}\\..\\test\\build\\obj_r",
            //"cwd": "${workspaceFolder}\\..\\test\\tests",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable all-exceptions",
                    "text": "catch throw",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
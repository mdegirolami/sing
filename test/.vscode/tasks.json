{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "ninja build",

            "command": "C:\\MinGW\\bin\\ninja.exe",
            "args": ["-v", "-f", "../build_debug.ninja"],
            "presentation": {
                "clear": true 
            },
            "options": {
                "cwd": "${workspaceFolder}\\build\\obj_d"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "ninja build release",

            "command": "C:\\MinGW\\bin\\ninja.exe",
            "args": ["-v", "-f", "../build_release.ninja"],
            "presentation": {
                "clear": true 
            },
            "options": {
                "cwd": "${workspaceFolder}\\build\\obj_r"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clean release",

            "command": "C:\\MinGW\\bin\\ninja.exe",
            "args": ["-v", "-f", "../build_release.ninja", "-t", "clean"],
            "presentation": {
                "clear": true 
            },
            "options": {
                "cwd": "${workspaceFolder}\\build\\obj_r"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clean debug",

            "command": "C:\\MinGW\\bin\\ninja.exe",
            "args": ["-v", "-f", "../build_debug.ninja", "-t", "clean"],
            "presentation": {
                "clear": true 
            },
            "options": {
                "cwd": "${workspaceFolder}\\build\\obj_d"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}